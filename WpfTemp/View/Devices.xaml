<UserControl x:Class="WpfTemp.View.Devices"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:WpfTemp.ViewModel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             d:DesignHeight="1080"
             d:DesignWidth="1200"
             mc:Ignorable="d">
    <UserControl.Resources>
        <sys:Double x:Key="FieldWidth">200</sys:Double>
        <Thickness x:Key="IconMargin">0,0,8,0</Thickness>

        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MaterialDesignTextBox}">
            <Setter Property="Margin" Value="10,10" />
            <Setter Property="Width" Value="100" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="FieldDockPanel" TargetType="DockPanel">
            <Setter Property="Margin" Value="0,0,8,16" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Width" Value="{StaticResource FieldWidth}" />
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Style="{StaticResource PageTitleTextBlock}" Text="DEVICE" />
        <TextBlock Style="{StaticResource PageSectionTitleTextBlock}" Text="MCC118"></TextBlock>

        <DockPanel HorizontalAlignment="Left" >
            <TextBox x:Name="txtCH0_VOL"  Width="100" Margin="8,0,0,0" VerticalAlignment="Bottom" materialDesign:HintAssist.Hint="CH0_VOL" IsReadOnly="True"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding CH0_VAL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="txtCH1_VOL"  Width="100" Margin="8,0,0,0" VerticalAlignment="Bottom" materialDesign:HintAssist.Hint="CH1_VOL" IsReadOnly="True"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding CH1_VAL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="txtCH2_VOL"  Width="100" Margin="8,0,0,0" VerticalAlignment="Bottom" materialDesign:HintAssist.Hint="CH2_VOL" IsReadOnly="True"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding CH2_VAL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="txtCH3_VOL"  Width="100" Margin="8,0,0,0" VerticalAlignment="Bottom" materialDesign:HintAssist.Hint="CH3_VOL" IsReadOnly="True"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding CH3_VAL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="txtCH4_VOL"  Width="100" Margin="8,0,0,0" VerticalAlignment="Bottom" materialDesign:HintAssist.Hint="CH4_VOL" IsReadOnly="True"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding CH4_VAL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="txtCH5_VOL"  Width="100" Margin="8,0,0,0" VerticalAlignment="Bottom" materialDesign:HintAssist.Hint="CH5_VOL" IsReadOnly="True"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding CH5_VAL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="txtCH6_VOL"  Width="100" Margin="8,0,0,0" VerticalAlignment="Bottom" materialDesign:HintAssist.Hint="CH6_VOL" IsReadOnly="True"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding CH6_VAL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="txtCH7_VOL"  Width="100" Margin="8,0,0,0" VerticalAlignment="Bottom" materialDesign:HintAssist.Hint="CH7_VOL" IsReadOnly="True"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding CH7_VAL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </DockPanel>
    </StackPanel>
</UserControl>

