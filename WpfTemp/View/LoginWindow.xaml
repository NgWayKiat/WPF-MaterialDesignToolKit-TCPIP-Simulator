<Window x:Class="WpfTemp.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTemp.View"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:materialDesignConverters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
        Height="460" Width="620" ResizeMode="NoResize" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Shadows.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border>
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.8" Color="Black" />
        </Border.Effect>
        <Grid Margin="20">
            <Border BorderThickness="1" BorderBrush="#FF0A56A0">
                <materialDesign:ColorZone Mode="PrimaryMid">
                    <Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="80"/>
                                <RowDefinition Height="380" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Background="#FF0A56A0" MouseLeftButtonDown="Window_MouseLeftButtonDown" >
                                <StackPanel Height="60" Margin="5">
                                    <TextBlock Text="BIOSG" Foreground="White" HorizontalAlignment="Center" FontSize="48" FontFamily="Champagne &amp; Limousines" FontWeight="Bold"/>
                                </StackPanel>
                                <Button materialDesign:RippleAssist.Feedback="{Binding RelativeSource={RelativeSource Self}, Path=Foreground, Converter={x:Static materialDesignConverters:BrushRoundConverter.Instance}}"
                                        HorizontalAlignment="Right" Margin="20,0,20,0"
                                        Content="{materialDesign:PackIcon Kind=Power, Size=24}"
                                        Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                                        Style="{StaticResource MaterialDesignToolButton}"
                                        ToolTip="Shutdown" Click="BtnClose_Click"/>    
                            </Grid>
                            <Grid Grid.Row="1">
                                <Image x:Name="imgInfoLogo" Source="/Image/BIO_infologo.jpg" Stretch="UniformToFill"/>
                                <Grid  Margin="0 0 20 0" Width="250" Height="250" HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <Rectangle RadiusY="10" RadiusX="10" Fill="#FF0A56A0" Opacity="0.85"/>
                                    <StackPanel Margin="10">
                                        <TextBlock Text="Login Page" Padding="5" Foreground="WhiteSmoke" FontFamily="Segoe UI" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                                        <StackPanel Margin="0,10" Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Account" VerticalAlignment="Center" Height="20" Width="20"/>
                                            <TextBox Style="{StaticResource MaterialDesignTextBox}" x:Name="Login" materialDesign:HintAssist.Hint="User Name" FontSize="14" Width="200" Margin="5" TextChanged="Login_OnTextChanged" KeyDown="TextBox_KeyDown"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Key" VerticalAlignment="Center" Height="20" Width="20"/>
                                            <PasswordBox x:Name="Password" materialDesign:HintAssist.Hint="Password" Width="200" FontSize="14" Margin="5" PasswordChanged="Password_OnPasswordChanged" KeyDown="TextBox_KeyDown"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock x:Name="ErrorMessage" Text="" Foreground="Red" FontSize="12" HorizontalAlignment="Center" Margin="0,5" Visibility="Hidden"/>
                                        </StackPanel>
                                        <Button x:Name="SignIn" Margin="0,10" 
                                                IsEnabled="False"
                                                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                                HorizontalAlignment="Center" Content="Login" FontFamily="Segoe UI" FontSize="18" Width="120" Click="SignIn_OnClick"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </materialDesign:ColorZone>
            </Border>
        </Grid>
    </Border>
</Window>
