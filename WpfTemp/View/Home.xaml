<UserControl x:Class="WpfTemp.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:materialDesignConverters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
             xmlns:vm="clr-namespace:WpfTemp.ViewModel"
             xmlns:core="clr-namespace:WpfTemp.Model"
             xmlns:local="clr-namespace:WpfTemp.View"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="1080"
             d:DesignWidth="1200">
    <UserControl.Resources>
        <Thickness x:Key="IconMargin">0,0,8,0</Thickness>
        <sys:Double x:Key="FieldWidth">200</sys:Double>
        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MaterialDesignTextBox}">
            <Setter Property="Margin" Value="0,8" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="FieldIcon" TargetType="materialDesign:PackIcon">
            <Setter Property="DockPanel.Dock" Value="Left" />
            <Setter Property="Margin" Value="{StaticResource IconMargin}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="FieldDockPanel" TargetType="DockPanel">
            <Setter Property="Margin" Value="0,0,8,16" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Width" Value="{StaticResource FieldWidth}" />
        </Style>
    </UserControl.Resources>
    <materialDesign:DialogHost Style="{StaticResource MaterialDesignEmbeddedDialogHost}">
        <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding OpenDrawers.LeftDrawer}" IsRightDrawerOpen="{Binding OpenDrawers.RightDrawer}">
            <materialDesign:DrawerHost.LeftDrawerContent>
                <ContentControl>
                    <StackPanel Width="300" Cursor="" Orientation="Vertical">
                        <DockPanel Style="{StaticResource FieldDockPanel}" HorizontalAlignment="Left">
                            <TextBox x:Name="txtClientIp" MaxLength="15" Width="150" Margin="10,10,0,0" VerticalAlignment="Bottom" materialDesign:HintAssist.Hint="IP Adress"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding TcpClientModel.Client_Ip, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </DockPanel>
                        <DockPanel Style="{StaticResource FieldDockPanel}" HorizontalAlignment="Left">
                            <TextBox x:Name="txtClientPort" MaxLength="4" Width="150" Margin="10,10,0,0" VerticalAlignment="Bottom" materialDesign:HintAssist.Hint="Port Address"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding TcpClientModel.Client_Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </DockPanel>
                        
                        <Button Content="{materialDesign:PackIcon ContentSave}"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                ToolTip="Save" Width="80" Margin="0,10" Click="BtnSave_OnClick"/>
                    </StackPanel>
                </ContentControl>
            </materialDesign:DrawerHost.LeftDrawerContent>
            <DockPanel>
                <Grid DockPanel.Dock="Top" Margin="5">
                    <DockPanel LastChildFill="False">
                        <Button materialDesign:RippleAssist.Feedback="{Binding RelativeSource={RelativeSource Self}, Path=Foreground, Converter={x:Static materialDesignConverters:BrushRoundConverter.Instance}}"
                                Margin="8 0 0 0"
                                Command="{Binding ExecuteCommand}"
                                CommandParameter="OpenLeftDrawer"
                                IsEnabled="{Binding TcpClientModel.IsReadyConnected}"
                                Content="{materialDesign:PackIcon Kind=Cog,Size=24}"
                                Cursor="Hand"
                                ToolTip="Setting"
                                DockPanel.Dock="Left" 
                                Style="{StaticResource MaterialDesignFloatingActionMiniButton}"/>
                        
                        <Button materialDesign:RippleAssist.Feedback="{Binding RelativeSource={RelativeSource Self}, Path=Foreground, Converter={x:Static materialDesignConverters:BrushRoundConverter.Instance}}"
                                Margin="8 0 0 0"
                                Command="{Binding TcpClientModel.ConnectCommand}"
                                IsEnabled="{Binding TcpClientModel.IsReadyConnected}"
                                Content="{materialDesign:PackIcon Kind=CogPlay,Size=24}"
                                Cursor="Hand"
                                DockPanel.Dock="Left" 
                                ToolTip="Start"
                                Style="{StaticResource MaterialDesignFloatingActionMiniButton}"/>
                        
                        <Button materialDesign:RippleAssist.Feedback="{Binding RelativeSource={RelativeSource Self}, Path=Foreground, Converter={x:Static materialDesignConverters:BrushRoundConverter.Instance}}"
                                Margin="8 0 0 0"
                                Command="{Binding TcpClientModel.DisconnectCommand}"
                                IsEnabled="{Binding TcpClientModel.IsConnected}"
                                Content="{materialDesign:PackIcon Kind=CogStop,Size=24}"
                                Cursor="Hand"
                                ToolTip="Stop"
                                DockPanel.Dock="Left" 
                                Style="{StaticResource MaterialDesignFloatingActionMiniButton}"/>
                        
                        <Button materialDesign:RippleAssist.Feedback="{Binding RelativeSource={RelativeSource Self}, Path=Foreground, Converter={x:Static materialDesignConverters:BrushRoundConverter.Instance}}"
                                Margin="8 0 0 0"
                                Command="{Binding TcpClientModel.ClearCommand}"
                                Content="{materialDesign:PackIcon Kind=Delete,Size=24}"
                                Cursor="Hand"
                                DockPanel.Dock="Left" 
                                ToolTip="Clear All"
                                Style="{StaticResource MaterialDesignFloatingActionMiniButton}"/>
                    </DockPanel>
                </Grid>

                <Expander Margin="4" Background="White" DockPanel.Dock="Bottom" ExpandDirection="Up" IsExpanded="True">
                    <Expander.Header>
                        <DockPanel Grid.Row="1" Height="30" DockPanel.Dock="Bottom" LastChildFill="False">
                            <Rectangle Width="10" Height="10" Fill="{ Binding TcpClientModel.Connected }" Margin="5"/>
                            <TextBlock VerticalAlignment="Center" Text="IP：" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding TcpClientModel.Client_Ip}" />
                            <TextBlock VerticalAlignment="Center" Text="   Port：" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding TcpClientModel.Client_Port}" />
                        </DockPanel>
                    </Expander.Header>
                    <Border Background="{DynamicResource RegionBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1,1,1,0"
                            CornerRadius="4,4,0,0"> 
                        <DockPanel DockPanel.Dock="Bottom">
                            <DockPanel DockPanel.Dock="Top" LastChildFill="False">
                                <Button Width="100" Margin="4"
                                        Command="{Binding TcpClientModel.SendCommand}"
                                        Content="Send" DockPanel.Dock="Right" />
                            </DockPanel>
                            <ContentControl Margin="4,0" Padding="0">
                                <TextBox MinHeight="100" MaxHeight="250" VerticalContentAlignment="Top"
                                         AcceptsReturn="True"
                                         materialDesign:HintAssist.Hint="Send Message"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Text="{Binding TcpClientModel.SendInput, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Enter"
                                                    Command="{Binding TcpClientModel.SendCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                            </ContentControl>
                        </DockPanel>
                    </Border>
                </Expander>

                <Border Margin="5" BorderBrush="Blue" Background="White" CornerRadius="4">
                    <ScrollViewer>
                        <ItemsControl Background="{DynamicResource BackgroundBrush}" ItemsSource="{Binding TcpClientModel.Messages}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.Resources>
                                <DataTemplate DataType="{x:Type core:MessageData}">
                                    <Border Margin="3" Padding="2" BorderThickness="1" CornerRadius="4" BorderBrush="#FF0A56A0">
                                        <WrapPanel Orientation="Horizontal">
                                            <TextBlock Margin="3" VerticalAlignment="Center" Foreground="{Binding FColor}"
                                                       Text="{Binding Time, StringFormat={}{0:yyyy-MM-dd HH:mm:ss.fff}}" />
                                            <TextBlock Margin="5,0" VerticalAlignment="Center" FontWeight="Bold"
                                                       Text="{Binding Type}" Foreground="{Binding FColor}" />
                                            <TextBlock Margin="5,0" VerticalAlignment="Center" Foreground="{Binding FColor}" 
                                                       FontSize="12" FontWeight="Bold" Text="{Binding Title}"/>
                                            <TextBlock Margin="5,0" VerticalAlignment="Center"
                                                       FontSize="12" FontWeight="Bold"
                                                       Text="{Binding Content}"  Foreground="{Binding FColor}" TextWrapping="Wrap" />
                                        </WrapPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.Resources>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </DockPanel>
        </materialDesign:DrawerHost>
    </materialDesign:DialogHost>
</UserControl>
