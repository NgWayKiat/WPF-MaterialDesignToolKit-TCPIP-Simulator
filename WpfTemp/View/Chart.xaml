<UserControl x:Class="WpfTemp.View.Chart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:WpfTemp.ViewModel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             d:DesignHeight="1080"
             d:DesignWidth="1200"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Card.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Flipper.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.FlipperClassic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Popupbox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="250" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
                <lvc:CartesianChart Margin="10" LegendLocation="Bottom" Width="750" BorderThickness="1">
                    <lvc:CartesianChart.Series>
                        <lvc:LineSeries Fill="Transparent" Stroke="Blue" Title="CH0" Values="{Binding SeriesValues}" PointGeometrySize="8" DataLabels="True"/>
                    </lvc:CartesianChart.Series>
                    <lvc:CartesianChart.AxisX >
                        <lvc:Axis Title="DateTime" Position="LeftBottom" Labels="{Binding Labels}">
                            <lvc:Axis.Separator>
                                <lvc:Separator materialDesign:ColorZoneAssist.Foreground="Black" StrokeThickness="1" Step="1" />
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Voltage" MaxValue="10" MinValue="0" Position="LeftBottom">
                            <lvc:Axis.Separator>
                                <lvc:Separator materialDesign:ColorZoneAssist.Background="Black" StrokeThickness="1" Step="0.5" />
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
                <TextBlock x:Name="GaugeTitleTextBlock" Text="CH0" HorizontalAlignment="Center" Height="50"/>
                <lvc:Gauge x:Name="VoltageGauge" From="0" To="10" Value="{Binding GaugeValue}" Height="100" Width="180"
                           GaugeBackground="#c1c2c2" FontSize="10" HorizontalContentAlignment="Center" VerticalAlignment="Top" HighFontSize="16" Margin="10 10 10 10">
                </lvc:Gauge>
            </StackPanel>
        </Grid>
        
    </DockPanel>
</UserControl>
